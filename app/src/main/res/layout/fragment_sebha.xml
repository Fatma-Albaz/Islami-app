<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_sebha"
        android:scaleType="centerCrop"/>
    <include layout="@layout/app_logo" android:id="@+id/appLogo"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_sebha"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/btn_sebha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp"
        android:padding="30dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tasbehaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_sebha"
        app:layout_constraintBottom_toBottomOf="@id/btn_sebha"
        app:layout_constraintStart_toStartOf="@id/btn_sebha"
        app:layout_constraintEnd_toEndOf="@id/btn_sebha"
        android:gravity="center"
        tools:text="سبحان الله"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tasbehaNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tasbehaName"
        app:layout_constraintStart_toStartOf="@id/btn_sebha"
        app:layout_constraintEnd_toEndOf="@id/btn_sebha"
        android:gravity="center"
        tools:text="3"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>