<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gold"
    android:paddingTop="20dp"
    android:padding="10dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_left_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_black_left_corner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="15dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_right_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_black_right_corner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="15dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bg_hadith_content"
        app:layout_constraintBottom_toTopOf="@id/bg_page_bottom"
        app:layout_constraintTop_toBottomOf="@id/hadith_title_tv"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_page_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_bottom_mosque"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintHeight_percent="0.15"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hadith_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ic_left_corner"
        app:layout_constraintBottom_toBottomOf="@id/ic_left_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        tools:text="الحديث الأول"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hadith_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/hadith_title_tv"
        app:layout_constraintBottom_toTopOf="@id/bg_page_bottom"
        app:layout_constraintStart_toStartOf="@id/ic_left_corner"
        app:layout_constraintEnd_toEndOf="@id/ic_right_corner"
        tools:text="الحديث الأول"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center|top"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>